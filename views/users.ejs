<%- include('partials/head') %>
<%- include('partials/navbar') %>

<div class="container-center">
   <h4>List Of Users</h4>
   <a href="/" onClick="history.back(); return false;">Back to Home</a>
  <table class="table table-striped">

    <thead>
     
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <% if (user.is_admin) { %>
        <th></th>
        <th></th>
        <% } %>
      </tr>
    </thead>
      <tbody>
	<% users.forEach(user => { %>
          <tr>        
         <ul style="list-style-type: none;">
         <li>
          <td> <%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td> 
          <% if (user.is_admin) { %>
          <td>
            <a href="/edit-user/<%= user.id %>" class="btn btn-link">Edit</a>
          </td>
          <td>
            <form method="POST" action="/delete-user/<%= user.id %>">
              <input type="submit" value="Delete" class="btn btn-link"/>
            </form>
          </td>
	  <% } %>
        </li>
        </ul>
      </tr>
	<% }) %>
      </tbody>
  </table>
</div>
<%- include('partials/footer') %>
