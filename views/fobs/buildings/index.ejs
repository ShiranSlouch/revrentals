<%- include('../../partials/head') %>
<%- include('../../partials/navbar') %>
<div class="container text-center p-4">
    <a href="/fobs/new-building">
        Add Building
    </a>
    <h2>Buildings</h2>

    <div class="table-responsive" style="background:white">
    <table class="table table-hover data-table">
        <thead>
          <tr>
            <th>Address</th>
            <th style="width:270px"></th>
          </tr>
        </thead>
    <tbody>
      <% buildings.forEach(building => { %>
	   <% if (building.building) { return; } %>
        <tr>
          <td><%= building.address %></td>
          <td>
              <div class="btn-group">
              
            <a class="btn btn-warning btn-xs" href="/fobs/buildings/<%= building.id %>">
              <i class="fas fa-pencil-alt"></i>
            </a>
            <a class="btn btn-success btn-xs" href="/fobs/buildings/<%= building.id %>/apartments">
              <i class="fa fa-eye"></i> View Apartments
            </a>
            <a class="btn btn-success btn-xs" href="/fobs/buildings/<%= building.id %>/new-apartment">
              <i class="fa fa-plus"></i> New Apartment
            </a>
                  </div>
          </td>
         </tr>
     <% }) %>
    </tbody>
  </table>
  </div>
</div>
<%- include('../../partials/footer') %>
